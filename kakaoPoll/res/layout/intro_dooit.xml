<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:scrollbars="none" >
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusableInTouchMode="true" >
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4" >
            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="120.6dp"
                    android:layout_height="120.6dp"
                    android:src="@drawable/about_dooit_logo" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="두잇서베이"
                    android:textColor="#000"
                    android:textScaleX="0.8"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@Dooit Survey"
                    android:textColor="#6c949e"
                    android:textScaleX="0.8"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="두잇서베이 만의\n스마트 솔루션 시스템.\n설문조사의 모든것을\n무료로 만나보세요."
                    android:textScaleX="0.8" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_height="2px"
            android:background="#d9d9d9" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp" >
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="26.13dp"
                    android:layout_height="26.8dp"
                    android:src="@drawable/home" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="10"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:background="@null"
                    android:text="http://www.dooit.co.kr"
                    android:textColor="#619eb0"
                    android:textScaleX="0.8"
                    android:textSize="18sp"
                    android:typeface="sans" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_height="2px"
            android:background="#e0e5e8" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp" >
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="26.13dp"
                    android:layout_height="26.8dp"
                    android:src="@drawable/blog" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="10"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:background="@null"
                    android:text="http://doooit.tistory.com"
                    android:textColor="#619eb0"
                    android:textScaleX="0.8"
                    android:textSize="18sp"
                    android:typeface="sans" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_height="2px"
            android:background="#e0e5e8" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp" >
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="26.13dp"
                    android:layout_height="26.8dp"
                    android:src="@drawable/say" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="10"
                android:orientation="vertical" >
                <EditText
                    android:id="@+id/say1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="11"
                    android:enabled="false"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#000"
                    android:textScaleX="0.9"
                    android:textSize="15sp"
                    android:typeface="sans" />
                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="-22dp" >
                    <ImageView
                        android:id="@+id/imgbtn1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/image_border"
                        android:src="@drawable/info_dooit1" />
                    <ImageView
                        android:id="@+id/imgbtn2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/image_border"
                        android:src="@drawable/info_dooit2" />
                </LinearLayout>
                <EditText
                    android:id="@+id/say2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="14"
                    android:enabled="false"
                    android:lineSpacingMultiplier="1.2"
                    android:textScaleX="0.9"
                    android:textSize="14sp"
                    android:typeface="monospace" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_height="2px"
            android:background="#e0e5e8" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp" >
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="26.13dp"
                    android:layout_height="26.8dp"
                    android:src="@drawable/say" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="10"
                android:orientation="vertical" >
                <EditText
                    android:id="@+id/say3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="11"
                    android:enabled="false"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#000"
                    android:textScaleX="0.9"
                    android:textSize="15sp"
                    android:typeface="sans" />
                <ImageView
                    android:id="@+id/imgbtn3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="-22dp"
                    android:background="@drawable/image_border"
                    android:src="@drawable/info_link" />
                <EditText
                    android:id="@+id/say4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:lineSpacingMultiplier="1.2"
                    android:textScaleX="0.9"
                    android:textSize="14sp"
                    android:typeface="monospace" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_height="2px"
            android:background="#e0e5e8" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp" >
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="26.13dp"
                    android:layout_height="26.8dp"
                    android:src="@drawable/say" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="10"
                android:orientation="vertical" >
                <EditText
                    android:id="@+id/say5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="11"
                    android:enabled="false"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#000"
                    android:textScaleX="0.9"
                    android:textSize="15sp"
                    android:typeface="sans" />
                <ImageView
                    android:id="@+id/imgbtn4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="-22dp"
                    android:background="@drawable/image_border"
                    android:src="@drawable/info_ad" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>